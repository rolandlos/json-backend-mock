# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
OPTIONS /api/person                     controllers.PersonController.options

GET     /api/naturalpersons/:id         controllers.PersonController.getPerson(id: String)
PUT     /api/naturalpersons/:id         controllers.PersonController.updatePerson(id: String)

POST    /api/case/create                controllers.CaseController.create()
PUT     /api/case/bikemototheft         controllers.CaseController.save()
PUT     /api/case/electrodevicetheft    controllers.CaseController.save()
PUT     /api/case/skisnowboardtheft     controllers.CaseController.save()

GET     /api/case                       controllers.CaseController.list()


GET     /api/users/self                 controllers.PersonController.self

POST    /api/case/{caseId}/fileupload   controllers.UploadController.upload(caseId: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
